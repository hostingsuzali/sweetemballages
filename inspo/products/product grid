import { ProductCard, type Product } from './ProductCard'
import { motion } from 'motion/react'
import { Package } from 'lucide-react'

interface ProductGridProps {
  products: Product[]
}

export function ProductGrid({ products }: ProductGridProps) {
  if (products.length === 0) {
    return (
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        className="text-center py-16"
      >
        <div className="w-16 h-16 bg-[#E8E4DE] rounded-full flex items-center justify-center mx-auto mb-4">
          <Package className="w-8 h-8 text-[#5A5A5A]" />
        </div>
        <h3 className="font-['DM_Sans'] text-xl font-bold text-[#2D2D2D] mb-2">
          Aucun produit trouvé
        </h3>
        <p className="font-['Inter'] text-[#5A5A5A]">
          Essayez de modifier vos filtres pour voir plus de résultats.
        </p>
      </motion.div>
    )
  }

  return (
    <div className="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {products.map((product, index) => (
        <ProductCard key={product.id} product={product} index={index} />
      ))}
    </div>
  )
}